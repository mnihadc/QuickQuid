{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "routes/**/*",
    "middleware/**/*",
    "models/**/*",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
